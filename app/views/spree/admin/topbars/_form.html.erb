<%= form_for [:admin, resource] do |f| %>
  <div class="row" data-hook="admin_page_form_fields">
    <div class="col-md-6" data-hook="admin_page_form_left">
      <div class="form-group">
        <%= f.label :color %> <span class="required">*</span>
        <%= f.text_field :color, class: 'form-control' %>
        <%= f.error_message_on :color %>
      </div>

      <div class="form-group">
        <%= f.label :background_color %> <span class="required">*</span>
        <%= f.text_field :background_color, class: 'form-control' %>
        <%= f.error_message_on :background_color %>
      </div>

      <div class="form-group">
        <%= f.label :message %> <span class="required">*</span>
        <%= f.text_area :message, rows: 12, class: 'form-control' %>
        <%= f.error_message_on :message %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
  
<% end %>